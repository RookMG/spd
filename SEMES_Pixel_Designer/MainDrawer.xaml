<Page x:Class="SEMES_Pixel_Designer.MainDrawer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
      Title="MainDrawer">

    <Border BorderThickness="1" BorderBrush="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <local:MainCanvas x:Name="mainCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Border>

    <!--
    아래 TextBlock을 지우고 사용할 라이브러리를 선택해 작성해주세요
    Ex)
        <ScottPlot:WpfPlot x:Name="WpfPlot1" />
    -->
    <Canvas MouseMove="MouseMoveHandler"
          Background="white">
    </Canvas>

</Page>
