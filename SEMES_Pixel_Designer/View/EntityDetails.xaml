<Page x:Class="SEMES_Pixel_Designer.EntityDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
     mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200"
      Title="EntityDetails">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TreeView x:Name="EntityTreeView"/>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Height="3"/>
        <Grid Grid.Row="2">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            
            <ComboBox  Grid.Row="0" x:Name="EntityDetailComboBox" SelectionChanged="ShowEntityProperties">
            </ComboBox>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel  Orientation="Vertical">
                    
                    <Expander Header="Common">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0">
                                <StackPanel Orientation="Vertical" x:Name="CommonStackPanel">
                                    <TextBlock Text="Color"/>
                                    <TextBlock Text="Color_type"/>
                                    <TextBlock Text="Handle"/>
                                    <TextBlock Text="Layer"/>
                                    <TextBlock Text="Line_type"/>
                                    <TextBlock Text="Line_weight"/>
                                    <TextBlock Text="Line_Type_scale"/>
                                    <TextBlock Text="Name"/>
                                </StackPanel>
                            </Border>

                            <GridSplitter Grid.Column="1" Width="2" ResizeBehavior="PreviousAndNext" Background="Gray" />

                            <Border Grid.Column="2">
                                <StackPanel Orientation="Vertical" x:Name="CommonValueStackPanel">
                                    <!--<TextBlock x:Name="Color"/>-->
                                    <ComboBox x:Name="ColorComboBox" SelectionChanged="ColorChange">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Rectangle Fill="{Binding Name}" Width="16" Height="16" Margin="0,2,5,2"/>
                                                    <TextBlock Text="{Binding Name}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock x:Name="Color_type"/>
                                    <TextBlock x:Name="Handle"/>
                                    <TextBlock x:Name="Layer"/>
                                    <TextBlock x:Name="Line_type"/>
                                    <TextBlock x:Name="Line_weight"/>
                                    <TextBlock x:Name="Line_Type_scale"/>
                                    <TextBlock x:Name="Name"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Expander>
                    
                    <Expander Header="Geometry">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>


                            <Border Grid.Column="0">
                                <StackPanel Orientation="Vertical" x:Name="GeometryStackPanel">
                                    <TextBlock Text="Start_point"/>
                                    <TextBlock Text="End_point"/>
                                </StackPanel>
                            </Border>

                            <GridSplitter Grid.Column="1" Width="2" ResizeBehavior="PreviousAndNext" Background="Gray" />

                            <Border Grid.Column="2">
                                <StackPanel Orientation="Vertical" x:Name="GeometryValueStackPanel">

                                </StackPanel>
                            </Border>
                        </Grid>
                    </Expander>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <GridSplitter Grid.Row="3" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Height="3"/>
        <TextBlock Grid.Row="4" Text="엔티티 속성 상세" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
    </Grid>
</Page>
