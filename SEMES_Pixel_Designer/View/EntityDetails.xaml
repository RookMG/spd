<Page x:Class="SEMES_Pixel_Designer.EntityDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
     mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200"
      Title="EntityDetails">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TreeView Grid.Row="0" x:Name="CellTreeView" />
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Height="3"/>
        <TreeView Grid.Row="2" x:Name="EntityTreeView" />
        <GridSplitter Grid.Row="3" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Height="3"/>
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" x:Name="EntityDetailComboBox" SelectionChanged="SelectEntityProperties" />
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">

                <StackPanel Orientation="Vertical">

                    <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>


                            <Border Grid.Column="0">
                                <StackPanel Orientation="Vertical" x:Name="CommonStackPanel">
                                    <TextBlock Text="Color" Height="20"/>
                                    <TextBlock Text="Color_type" Height="20"/>
                                    <TextBlock Text="Handle" Height="20"/>
                                    <TextBlock Text="Layer" Height="20"/>
                                    <TextBlock Text="Line_type" Height="20"/>
                                    <TextBlock Text="Line_weight" Height="20"/>
                                    <TextBlock Text="Line_Type_scale" Height="20"/>
                                    <TextBlock Text="Name" Height="20"/>
                                </StackPanel>
                            </Border>

                            <GridSplitter Grid.Column="1" Width="2" ResizeBehavior="PreviousAndNext" Background="Gray" />

                            <Border Grid.Column="2">
                                <StackPanel Orientation="Vertical" x:Name="CommonValueStackPanel">
                                    <!--<TextBlock x:Name="Color"/>-->
                                    <ComboBox x:Name="ColorComboBox" SelectionChanged="ColorChange" Height="20">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Rectangle Fill="{Binding Name}" Width="12" Height="12" />
                                                    <TextBlock Text="{Binding Name}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock x:Name="Color_type" Height="20"/>
                                    <TextBlock x:Name="Handle" Height="20"/>
                                    <TextBlock x:Name="Layer" Height="20"/>
                                    <TextBlock x:Name="Line_type" Height="20"/>
                                    <TextBlock x:Name="Line_weight" Height="20"/>
                                    <TextBlock x:Name="Line_Type_scale" Height="20"/>
                                    <TextBlock x:Name="Name" Height="20"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    <Grid>
                        <ListView x:Name="VertexesListView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Index" Width="40">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding idx}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="X" Width="70">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding X}" UndoLimit ="0" LostFocus="XTextBox_LostFocus" PreviewKeyDown="XTextBox_PreviewKeyDown"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Y" Width="70">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Y}" UndoLimit ="0" LostFocus="YTextBox_LostFocus" PreviewKeyDown="YTextBox_PreviewKeyDown"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </StackPanel>
            </ScrollViewer>


        </Grid>
    </Grid>
</Page>
