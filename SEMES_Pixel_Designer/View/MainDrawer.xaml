<Page x:Class="SEMES_Pixel_Designer.MainDrawer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainDrawer">

    <Border BorderThickness="1" BorderBrush="LightGray" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <local:MainCanvas x:Name="mainCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseMove="MouseMoveHandler"/>
    </Border>
</Page>
