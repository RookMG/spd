<Page x:Class="SEMES_Pixel_Designer.ToolBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
      mc:Ignorable="d" 
      d:DesignHeight="54" d:DesignWidth="800"
      Title="ToolBar">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="23" Margin="2">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" x:Key="ImgBtnStyle">
                    <Setter Property="Width" Value="23"/>
                    <Setter Property="Height" Value="23"/>
                    <Setter Property="Margin" Value="3,0,3,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="Command" Value="{Binding DelCommand}"/>
                </Style>
            </StackPanel.Resources>


            <Button CommandParameter="MainWindow.NewDxf" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/AddDocument_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.OpenDxf" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/OpenFolder_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.SaveDxf" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/Save_16x.png" />
            </Button>

            <Rectangle  VerticalAlignment="Stretch"  HorizontalAlignment="Center" Margin="5,0,5,0" Fill="LightGray" Width="1"/>

            <Button CommandParameter="MainWindow.Undo" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/StepBackwards_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.Redo" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/StepForward_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.ZoomIn" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/ZoomIn_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.ZoomOut" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/ZoomOut_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.FitScreen" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/FitToScreen_16x.png" />
            </Button>

            <Rectangle  VerticalAlignment="Stretch"  HorizontalAlignment="Center" Margin="5,0,5,0" Fill="LightGray" Width="1"/>

            <Button CommandParameter="MainWindow.DrawDot" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/Dot_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.DrawLine" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/Line_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.DrawRectangle" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/Rectangle_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.DrawPolygon" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/Polygon_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.DeleteEntities" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/Trash_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.CloneEntities" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/EditLayoutTable_16x.png" />
            </Button>
            <Button CommandParameter="MainWindow.TcpConnection" Style="{StaticResource ImgBtnStyle}">
                <Image Source="../Asset/icon/icons8-connected-48.png" />
            </Button>

        </StackPanel>
        <Separator />
        <StackPanel Orientation="Horizontal" Height="20" Margin="2">
            <TextBlock Text="Layouts" VerticalAlignment="Center" Margin="10,0,80,0" />
            <ComboBox Width="150">
                <ComboBoxItem Content="Model" IsSelected="True"/>
            </ComboBox>
        </StackPanel>
    </StackPanel>
</Page>
