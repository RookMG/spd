<Page x:Class="SEMES_Pixel_Designer.StatusBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
      mc:Ignorable="d" 
      d:DesignHeight="20" d:DesignWidth="800"
      Title="StatusBar">

    <StackPanel Orientation="Horizontal" Height="20" >
        <TextBlock Text="Mouse Position :" VerticalAlignment="Center" Margin="10,0,10,0" />
        <TextBlock x:Name="posi_x" TextWrapping="Wrap" Width="60" Text="{Binding x_position}"/>
        <TextBlock x:Name="posi_y" TextWrapping="Wrap" Width="60" Text="{Binding y_position}"/>
        <TextBlock TextWrapping="Wrap" Text=" File Path :   "/>
        <TextBlock x:Name="FilePath" TextWrapping="Wrap" Width="350"/>
    </StackPanel>
</Page>
