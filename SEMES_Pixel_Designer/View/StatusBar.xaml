<Page x:Class="SEMES_Pixel_Designer.StatusBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEMES_Pixel_Designer"
      mc:Ignorable="d" 
      d:DesignHeight="20" d:DesignWidth="800"
      Title="StatusBar">

    <StackPanel Orientation="Horizontal" Height="20" >
        <TextBlock x:Name="positionText" TextWrapping="Wrap" Width="250" VerticalAlignment="Center" Margin="10,0,10,0" />
        <TextBlock x:Name="filePathText" TextWrapping="Wrap" Width="450" VerticalAlignment="Center" Margin="10,0,10,0" />
    </StackPanel>
</Page>
